@{
    ViewData["Title"] = "WebRTC Remote Call (Powered by Rasel Kabir)";
}

<div class="container">
    <div class="row mb-4">
        <div class="col-md-6 border p-3" style="border-color: #007BFF;">
            <h4>Settings:</h4>
            <div class="row mb-3">
                <div class="form-check col-auto">
                    <label class="form-check-label" for="audio">Audio</label>
                    <input class="form-check-input" id="audio" type="checkbox" checked />
                </div>
                <div class="form-check col-auto">
                    <label class="form-check-label" for="camera_front">Front Camera</label>
                    <input class="form-check-input" id="camera_front" type="checkbox" checked />
                </div>
            </div>
            <div class="row g-3 align-items-center mb-3">
                <div class="col-auto">
                    <label for="camera_width" class="col-form-label"> Width:</label>
                </div>
                <div class="col-auto">
                    <input class="form-control" id="camera_width" type="number" value="1280" placeholder="Default (FullHD): 1280">
                </div>
                <div class="col-auto">
                    <label for="camera_height" class="col-form-label"> Height:</label>
                </div>
                <div class="col-auto">
                    <input class="form-control" id="camera_height" type="number" value="720" placeholder="Default (FullHD): 720">
                </div>
            </div>
            <button type="button" class="btn btn-primary" onclick="grabWebCamVideo()">Start Camera</button>
            <button type="button" class="btn btn-warning" onclick="stopWebCamVideo()">Stop Camera</button>
        </div>

        <div class="col-md-6 border p-3" style="border-color: #28A745;">
            <div class="connectionStatus">
                <p id="connectionStatusMessage">*You can create your own room or join the other room.</p>
            </div>
            <h4>Create Room:</h4>
            <div class="row g-3 align-items-center">
                <div class="col-auto">
                    <label for="name" class="col-form-label">Room Name:</label>
                </div>
                <div class="col-auto">
                    <input class="form-control" type="text" id="roomNameTxt">
                </div>
                <div class="col-auto">
                    <button type="button" class="btn btn-primary" id="createRoomBtn">Create</button>
                </div>
            </div>

            <div class="mt-3">
                <table id="roomTable" class="display table table-bordered" style="width:100%;">
                    <thead>
                        <tr>
                            <th>Room ID</th>
                            <th>Name</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div>
        <div class="controlls mb-3">
            <button type="button" class="btn btn-primary" onclick="document.getElementById('localVideo').requestFullscreen()">Full Local</button>
            <button type="button" class="btn btn-primary" onclick="document.getElementById('remoteVideo').requestFullscreen()">Full Remote</button>
            <button type="button" class="btn btn-primary" onclick="document.getElementById('localVideo').muted = !document.getElementById('localVideo').muted">Mute Local</button>
            <button type="button" class="btn btn-primary" onclick="document.getElementById('remoteVideo').muted = !document.getElementById('remoteVideo').muted">Mute Remote</button>
            <button type="button" class="btn btn-danger" onclick="location.reload()">Reload</button>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-6 border p-3" style="border-color: #007BFF;">
            <h5 class="mb-3">Video Chat</h5>
            <div class="videoArea d-flex">
                <video id="localVideo" autoplay playsinline controls class="border rounded"></video>
                <video id="remoteVideo" autoplay playsinline controls class="border rounded"></video>
            </div>
        </div>

        <div class="col-md-6 border p-3" style="border-color: #007BFF;">
            <h5>Text chat</h5>
            <div id="messages" class="border rounded p-3 mb-3" style="height: 100px; overflow-y: auto;"></div>
            <div class="d-flex">
                <input type="text" id="userInput" class="form-control me-2" placeholder="Enter your name" />
                <input type="text" id="messageInput" class="form-control me-2" placeholder="Enter a message" />
                <button id="sendButton" class="btn btn-primary">Send message</button>
            </div>
        </div>

    </div>


    <h5 class="mt-4">File Sharing</h5>
    <div id="fileShare" class="mb-3">
        <div class="row g-3 align-items-center">
            <div class="col-auto">
                <input class="form-control" type="file" id="fileInput">
            </div>
            <div class="col-auto">
                <button type="button" class="btn btn-primary" id="sendFileBtn">Send</button>
            </div>
        </div>
    </div>

    <table id="fileTable" class="table table-bordered">
        <thead>
            <tr>
                <th>Received Files</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>


    <footer class="AK_Footer text-center mt-4">
        Powered by Rasel Kabir.
    </footer>
</div>

@section StyleSheets {
    <link rel="stylesheet" href="~/css/jquery.dataTables.min.css" type="text/css" />
    <link rel="stylesheet" href="~/css/webrtc.css" type="text/css" />
}

@section Scripts {
    <script type="text/javascript" src="~/lib/signalr/dist/browser/signalr.js"></script>
    <script type="text/javascript" src="~/js/adapter-latest.js"></script>
    <script type="text/javascript" src="~/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="~/js/webrtc.js"></script>
}
